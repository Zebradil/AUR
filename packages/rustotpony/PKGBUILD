# shellcheck disable=SC2034,SC2154
pkgname=rustotpony
pkgver=0.5.1
pkgrel=2
pkgdesc='RusTOTPony â€” CLI manager of one-time password generators like Google Authenticator'
url='https://github.com/zebradil/rustotpony'
arch=(i686 x86_64 armv6h armv7h)
license=(MIT)
install=''
depends=(gcc-libs glibc)
makedepends=(cargo)
conflicts=(rustotpony-bin)
provides=(totp)
source=(rustotpony-0.5.1::https://github.com/zebradil/rustotpony/archive/0.5.1.tar.gz)
build () 
{ 
    set -eo pipefail;
    cd "${pkgname}-${pkgver}";
    cargo build --release
}
package () 
{ 
    set -eo pipefail;
    _binname=totp;
    install -Dm755 "${srcdir}/${pkgname}-${pkgver}/target/release/${_binname}" "${pkgdir}/usr/bin/${_binname}"
}
sha256sums=('d58b599ac14c009691f5f389eaff1b30a6799c284a641f04c28fc412579defaf')
